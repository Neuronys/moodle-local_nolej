{{!
    @template local_nolej/range_form_element

    Context variables required for this template:
    * elementname
    * label
    * value
    * min
    * max
    * step
    * errormessage

    Example context (json):
    {
        "elementname": "range",
        "label": "Select a number within the range.",
        "value": 50,
        "min": 0,
        "max": 100,
        "step": 1,
        "errormessage": "Value too low"
    }
}}

<div id="fitem_id_{{elementname}}" class="form-group row fitem mt-n4">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
        <label for="id_{{elementname}}">{{label}}</label>
    </div>
    <div class="col-md-9 felement" data-fieldtype="integer">
        <div class="row mt-2">
            <output name="out_{{elementname}}" for="{{elementname}}" class="col-md-6 col-sm-9 w-100 text-center">{{value}}</output>
        </div>
        <div class="row">
            <input type="range" name="{{elementname}}" value="{{value}}" id="id_{{elementname}}"
                class="col-md-6 col-sm-9 w-100 mr-3 ml-3" min="{{min}}" max="{{max}}" step="{{step}}"
                oninput="out_{{elementname}}.value=parseInt(id_{{elementname}}.value)">
        </div>
        <div class="small row">
            <div class="col-md-3">{{#str}} minvalue, local_nolej {{/str}}: {{min}}</div>
            <div class="col-md-3">{{#str}} maxvalue, local_nolej {{/str}}: {{max}}</div>
        </div>
        <div class="form-control-feedback invalid-feedback" id="id_error_{{elementname}}">
            {{errormessage}}
        </div>
    </div>
</div>
