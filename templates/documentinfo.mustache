{{!
    @template local_nolej/documentinfo

    Context variables required for this template:
    * review
    * summary
    * questions
    * concepts
    * settings
    * editurl
    * manageurl
    * title
    * source
    * sourcetype
    * transcription

    Example context (json):
    {
        "review": true,
        "summary": false,
        "questions": false,
        "concepts": true,
        "settings": false,
        "title": "My Nolej Module",
        "source": "https://www.youtube.com/...",
        "sourcetype": "Video",
        "transcription": "This is the transcription of the video",
        "manageurl": "https://mymoodlesite.com/local/nolej/manage.php?contextid=1",
        "editurl": "https://mymoodlesite.com/local/nolej/edit.php?contextid=1&documentid=abcd-efgh"
    }
}}

<div class='containerfluid' id='documentinfo'>
    <div id='accordion'>
        <div class='card'>
            <div class='card-header' id='headingOne'>
                <nav class='navbar navbar-expand-lg navbar-default navbar-light'>
                    <ul class='nav navbar-nav w-100'>
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default rounded px-2' role="button" href='{{manageurl}}'>
                                <i class='fa fa-chevron-left mr-2' aria-hidden='true'></i>
                                {{#str}} back, moodle {{/str}}
                            </a>
                        </li>
                        {{#review}}
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default rounded btn-outline-secondary px-2 {{#concepts}}active{{/concepts}}'
                                aria-pressed="{{#concepts}}true{{/concepts}}{{^concepts}}false{{/concepts}}"
                                role="button" href='{{editurl}}&step=concepts'>
                                <i class='fa fa-lightbulb-o mr-2' aria-hidden='true'></i>
                                {{#str}} concepts, local_nolej {{/str}}
                            </a>
                        </li>
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default rounded btn-outline-secondary px-2 {{#questions}}active{{/questions}}'
                                aria-pressed="{{#questions}}true{{/questions}}{{^questions}}false{{/questions}}"
                                role="button" href='{{editurl}}&step=questions'>
                                <i class='fa fa-question mr-2' aria-hidden='true'></i>
                                {{#str}} questions, local_nolej {{/str}}
                            </a>
                        </li>
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default rounded btn-outline-secondary px-2 {{#summary}}active{{/summary}}'
                                aria-pressed="{{#summary}}true{{/summary}}{{^summary}}false{{/summary}}"
                                role="button" href='{{editurl}}&step=summary'>
                                <i class='fa fa-list mr-2' aria-hidden='true'></i>
                                {{#str}} summary, local_nolej {{/str}}
                            </a>
                        </li>
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default rounded btn-outline-secondary px-2 {{#settings}}active{{/settings}}'
                                aria-pressed="{{#settings}}true{{/settings}}{{^settings}}false{{/settings}}"
                                role="button" href='{{editurl}}&step=activities'>
                                <i class='fa fa-cog mr-2' aria-hidden='true'></i>
                                {{#str}} settings, local_nolej {{/str}}
                            </a>
                        </li>
                        {{/review}}
                        <li class='mr-2 mb-2'>
                            <a class='nav-link btn btn-default' id='toggleinfo' href='#' data-toggle='collapse' data-target='#collapseOne' aria-expanded='true' aria-controls='collapseOne'>
                                <i class='fa fa-info mr-2' aria-hidden='true'></i>
                                {{#str}} documentinfo, local_nolej {{/str}}
                                <i id='chevronIcon' class='fa fa-chevron-right ml-2' aria-hidden='true'></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div id='collapseOne' class='collapse' aria-labelledby='headingOne' data-parent='#accordion'>
                <div class='card-body'>
                    <table class='table table-accordion'>
                        <tbody>
                            <tr>
                                <td><b>{{#str}} title, local_nolej {{/str}}</b></td>
                                <td>{{title}}</td>
                            </tr>
                            <tr>
                                <td><b>{{#str}} source, local_nolej {{/str}}</b></td>
                                <td>{{source}}</td>
                            </tr>
                            <tr>
                                <td><b>{{#str}} sourcetype, local_nolej {{/str}}</b></td>
                                <td>{{sourcetype}}</td>
                            </tr>
                            {{#transcription}}
                                <tr>
                                    <td><b>{{#str}} transcription, local_nolej {{/str}}</b></td>
                                    <td>{{{transcription}}}</td>
                                </tr>
                            {{/transcription}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
